<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mapAPI"
        android:name="com.google.android.gms.maps.SupportMapFragment">
    </fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/nav">

        <Button
            android:id="@+id/bthome"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_home_24_m"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btlist"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_collections_24_m"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btlocation"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_location_on_24_m"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btlogout"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_logout_24_m"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>